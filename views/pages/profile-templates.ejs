  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
  <script>
    $('#open').click(function () {
      $('#modalOverlay').show().addClass('modal-open');
    });

    $('#close').click(function () {
      var modal = $('#modalOverlay');
      modal.removeClass('modal-open');
      setTimeout(function () {
        modal.hide();
      }, 200);
    });
  </script>
